{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/diagram.schema.json",
  "title": "Diagram",
  "type": "object",
  "required": ["schemaVersion", "nodes", "edges"],
  "properties": {
    "schemaVersion": { "type": "string", "pattern": "^1\\.0\\.0$" },
    "metadata": {
      "type": "object",
      "properties": {
        "title": { "type": "string" }
      },
      "required": ["title"],
      "additionalProperties": true
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "x", "y", "w", "h"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "x": { "type": "number" },
          "y": { "type": "number" },
          "w": { "type": "number", "minimum": 1 },
          "h": { "type": "number", "minimum": 1 },
          "data": { "type": "object", "additionalProperties": true }
        },
        "additionalProperties": false
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "source", "target", "type"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "source": {
            "type": "object",
            "required": ["nodeId"],
            "properties": { "nodeId": { "type": "string" } },
            "additionalProperties": false
          },
          "target": {
            "type": "object",
            "required": ["nodeId"],
            "properties": { "nodeId": { "type": "string" } },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "selection": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}
