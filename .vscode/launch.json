{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Vite + Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/app/src",
      "preLaunchTask": "npm: dev (app)",
      "sourceMaps": true
    },
    {
      "name": "Vite + Edge",
      "request": "launch",
      "type": "msedge",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/app/src",
      "preLaunchTask": "npm: dev (app)",
      "sourceMaps": true
    },
    {
      "name": "Vitest (watch)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/app",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test:watch"],
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Vitest Single Run",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/app",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test:unit"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Playwright Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/app",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["playwright", "test"],
      "console": "integratedTerminal",
      "env": {
        "CI": "1"
      },
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "Full App + Chrome + Vitest",
      "configurations": ["Vite + Chrome", "Vitest (watch)"]
    }
  ]
}
